{
  "name": "hypercerts-indexer",
  "version": "1.0.0",
  "description": "Indexing service for the hypercerts ecosystem",
  "main": "dist/server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf dist && swc src --out-dir dist --copy-files",
    "start": "node --import dotenv/config dist/src/server.js",
    "lint": "next lint",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "pnpm supabase:seed && vitest run --config ./vitest.integration.config.ts",
    "supabase:reset": "npx supabase db reset && pnpm supabase:types",
    "supabase:seed": "pnpm supabase:reset && npx tsx seed.ts",
    "update:sentry:sourcemaps": "npx @sentry/wizard@latest -i sourcemaps",
    "supabase:types": "npx supabase gen types typescript --local > src/types/database-generated.types.ts",
    "supabase:types:data": "npx supabase gen types typescript --local --workdir ./lib/hypercerts-api > ./src/types/supabase-data-generated.types.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@faker-js/faker": "^8.4.1",
    "@sentry/node": "^8.13.0",
    "@sentry/profiling-node": "^8.13.0",
    "@sentry/types": "^8.13.0",
    "@swc-node/register": "^1.10.0",
    "@swc/cli": "^0.3.14",
    "@swc/core": "^1.5.25",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.17.43",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.6",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@viem/anvil": "^0.0.10",
    "@vitest/coverage-v8": "^1.3.1",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.1",
    "eslint": "^8.56.0",
    "kysely-postgres-js": "^2.0.0",
    "kysely-supabase": "^0.2.0",
    "msw": "^2.2.2",
    "nodemon": "^3.0.3",
    "postgres": "^3.4.4",
    "prettier": "3.2.5",
    "prool": "^0.0.15",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "supabase": "^1.187.3",
    "supertest": "^6.3.4",
    "ts-mockito": "^2.6.1",
    "tsx": "^4.7.1",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.0.2",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1",
    "vitest-mock-extended": "^1.3.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@hypercerts-org/chainsauce": "1.0.24",
    "@hypercerts-org/contracts": "2.0.0-alpha.5",
    "@hypercerts-org/marketplace-sdk": "^0.3.32",
    "@hypercerts-org/sdk": "^2.0.0-alpha.37",
    "@opentelemetry/instrumentation": "^0.52.1",
    "@openzeppelin/merkle-tree": "^1.0.7",
    "@supabase/postgrest-js": "^1.15.7",
    "@supabase/supabase-js": "^2.44.2",
    "@types/lodash": "^4.17.6",
    "axios": "^1.7.2",
    "ethers": "^6.13.1",
    "express": "^4.19.2",
    "kysely": "^0.27.4",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "pg": "^8.12.0",
    "type-fest": "^4.20.1",
    "viem": "^2.19.7",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@9.2.0+sha256.94fab213df221c55b6956b14a2264c21c6203cca9f0b3b95ff2fe9b84b120390"
}
